<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/fragment_raffle">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineStart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/labelProductInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hediye Bilgileri"
        android:textColor="@color/colorAccent"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewProductInfo"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:gravity="bottom"
        android:text="@string/product_info_text"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@id/labelProductInfo"
        app:layout_constraintTop_toBottomOf="@id/labelProductInfo" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewUnitPrice"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:gravity="bottom"
        android:text="@string/unit_price_text"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@id/labelProductInfo"
        app:layout_constraintTop_toBottomOf="@id/textViewProductInfo" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/LabelRaffleInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Katılım Bilgileri"
        android:textColor="@color/colorAccent"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/guidelineStart"
        app:layout_constraintTop_toBottomOf="@+id/textViewUnitPrice" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewStartDate"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:gravity="bottom"
        android:text="@string/start_date_text"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@id/LabelRaffleInfo"
        app:layout_constraintTop_toBottomOf="@id/LabelRaffleInfo" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewEndDate"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:gravity="bottom"
        android:text="@string/end_date_text"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@id/LabelRaffleInfo"
        app:layout_constraintTop_toBottomOf="@id/textViewStartDate" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewMaxAttendee"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:gravity="bottom"
        android:text="@string/max_attendee_text"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@id/labelProductInfo"
        app:layout_constraintTop_toBottomOf="@id/textViewEndDate" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewMaxAttendByUser"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:gravity="bottom"
        android:text="@string/max_attend_by_user_text"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@id/labelProductInfo"
        app:layout_constraintTop_toBottomOf="@id/textViewMaxAttendee" />

</androidx.constraintlayout.widget.ConstraintLayout>